<%- include('../partials/head') %>
<%- include('../partials/sidebar') %>
<main class="main-content">
  <%- include('../partials/header') %>
  <div class="content-area">
    <div class="page-header">
      <h1>Edit Student</h1>
      <a href="/students" class="btn btn-secondary">Back to List</a>
    </div>

    <% if (error) { %>
      <div class="alert alert-error"><%= error %></div>
    <% } %>

    <form action="/students/edit/<%= student.id %>" method="POST" class="form-card">
      <div class="form-group">
        <label for="firstName">First Name</label>
        <input type="text" id="firstName" name="firstName" required value="<%= student.firstName %>">
      </div>
      <div class="form-group">
        <label for="lastName">Last Name</label>
        <input type="text" id="lastName" name="lastName" required value="<%= student.lastName %>">
      </div>
      <div class="form-group">
        <label for="phone">Phone Number</label>
        <input type="text" id="phone" name="phone" required value="<%= student.phone %>">
      </div>
      <div class="form-group">
        <label>Assign to Groups</label>
        <% if (groups.length === 0) { %>
          <p class="muted">No groups available.</p>
        <% } else { %>
          <div class="checkbox-group">
            <% groups.forEach(g => { %>
              <label class="checkbox-label">
                <input type="checkbox" name="groupIds" value="<%= g.id %>" <%= (student.groupIds || []).includes(g.id) ? 'checked' : '' %>>
                <%= g.name %>
              </label>
            <% }) %>
          </div>
        <% } %>
      </div>
      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="/students" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
</main>
<%- include('../partials/footer') %>
