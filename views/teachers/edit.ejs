<%- include('../partials/head') %>
<%- include('../partials/sidebar') %>
<main class="main-content">
  <%- include('../partials/header') %>
  <div class="content-area">
    <div class="page-header">
      <h1>Edit Teacher</h1>
      <a href="/teachers" class="btn btn-secondary">Back to List</a>
    </div>

    <% if (error) { %>
      <div class="alert alert-error"><%= error %></div>
    <% } %>

    <form action="/teachers/edit/<%= teacher.id %>" method="POST" class="form-card">
      <div class="form-group">
        <label for="firstName">First Name</label>
        <input type="text" id="firstName" name="firstName" required value="<%= teacher.firstName %>">
      </div>
      <div class="form-group">
        <label for="lastName">Last Name</label>
        <input type="text" id="lastName" name="lastName" required value="<%= teacher.lastName %>">
      </div>
      <div class="form-group">
        <label for="phone">Phone Number</label>
        <input type="text" id="phone" name="phone" required value="<%= teacher.phone %>">
      </div>
      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="/teachers" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
</main>
<%- include('../partials/footer') %>
