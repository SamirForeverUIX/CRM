<%- include('../partials/head') %>
<%- include('../partials/sidebar') %>
<main class="main-content">
  <%- include('../partials/header') %>
  <div class="content-area">
    <div class="page-header">
      <h1>Teachers <span class="count-badge"><%= teachers.length %></span></h1>
      <a href="/teachers/add" class="btn btn-primary">+ Add Teacher</a>
    </div>

    <% if (search) { %>
      <p class="search-info">Search results for "<strong><%= search %></strong>" â€” <a href="/teachers">Clear</a></p>
    <% } %>

    <% if (teachers.length === 0) { %>
      <div class="empty-state">
        <div class="empty-state-icon">
          <svg width="32" height="32" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5"><path d="M17 21v-2a4 4 0 0 0-4-4H5a4 4 0 0 0-4 4v2"/><circle cx="9" cy="7" r="4"/><path d="M23 21v-2a4 4 0 0 0-3-3.87"/><path d="M16 3.13a4 4 0 0 1 0 7.75"/></svg>
        </div>
        <p>No teachers found.</p>
        <a href="/teachers/add" class="btn btn-primary">Add your first teacher</a>
      </div>
    <% } else { %>
      <table class="data-table">
        <thead>
          <tr>
            <th>#</th>
            <th>Teacher</th>
            <th>Phone</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% teachers.forEach((teacher, i) => { %>
            <tr>
              <td><%= i + 1 %></td>
              <td style="display:flex;align-items:center;gap:10px;">
                <div class="avatar avatar-sm avatar-gradient-<%= (i % 6) + 1 %>"><%= teacher.firstName.charAt(0) %><%= teacher.lastName.charAt(0) %></div>
                <%= teacher.firstName %> <%= teacher.lastName %>
              </td>
              <td><%= teacher.phone %></td>
              <td class="actions-cell">
                <a href="/teachers/edit/<%= teacher.id %>" class="btn btn-small btn-edit">Edit</a>
                <form action="/teachers/delete/<%= teacher.id %>" method="POST" class="inline-form" onsubmit="return confirm('Delete this teacher?')">
                  <button type="submit" class="btn btn-small btn-delete">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</main>
<%- include('../partials/footer') %>
