<%- include('../partials/head') %>
<%- include('../partials/sidebar') %>
<main class="main-content">
  <%- include('../partials/header') %>
  <div class="content-area">
    <div class="page-header">
      <h1>Teachers</h1>
      <a href="/teachers/add" class="btn btn-primary">+ Add Teacher</a>
    </div>

    <% if (search) { %>
      <p class="search-info">Search results for "<strong><%= search %></strong>" â€” <a href="/teachers">Clear</a></p>
    <% } %>

    <% if (teachers.length === 0) { %>
      <div class="empty-state">
        <p>No teachers found.</p>
        <a href="/teachers/add" class="btn btn-primary">Add your first teacher</a>
      </div>
    <% } else { %>
      <table class="data-table">
        <thead>
          <tr>
            <th>#</th>
            <th>First Name</th>
            <th>Last Name</th>
            <th>Phone</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% teachers.forEach((teacher, i) => { %>
            <tr>
              <td><%= i + 1 %></td>
              <td><%= teacher.firstName %></td>
              <td><%= teacher.lastName %></td>
              <td><%= teacher.phone %></td>
              <td class="actions-cell">
                <a href="/teachers/edit/<%= teacher.id %>" class="btn btn-small btn-edit">Edit</a>
                <form action="/teachers/delete/<%= teacher.id %>" method="POST" class="inline-form" onsubmit="return confirm('Delete this teacher?')">
                  <button type="submit" class="btn btn-small btn-delete">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</main>
<%- include('../partials/footer') %>
