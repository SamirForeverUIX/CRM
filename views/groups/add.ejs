<%- include('../partials/head') %>
<%- include('../partials/sidebar') %>
<main class="main-content">
  <%- include('../partials/header') %>
  <div class="content-area">
    <div class="page-header">
      <h1>Add Group</h1>
      <a href="/groups" class="btn btn-secondary">Back to List</a>
    </div>

    <% if (error) { %>
      <div class="alert alert-error"><%= error %></div>
    <% } %>

    <form action="/groups/add" method="POST" class="form-card">
      <div class="form-group">
        <label for="name">Group Name</label>
        <input type="text" id="name" name="name" required placeholder="e.g. A1 English Morning">
      </div>
      <div class="form-group">
        <label for="courseId">Course</label>
        <select id="courseId" name="courseId">
          <option value="">-- Select Course --</option>
          <% courses.forEach(c => { %>
            <option value="<%= c.id %>"><%= c.name %> (<%= c.level %>)</option>
          <% }) %>
        </select>
      </div>
      <div class="form-group">
        <label for="teacherId">Assigned Teacher</label>
        <select id="teacherId" name="teacherId">
          <option value="">-- Select Teacher --</option>
          <% teachers.forEach(t => { %>
            <option value="<%= t.id %>"><%= t.firstName %> <%= t.lastName %></option>
          <% }) %>
        </select>
      </div>
      <div class="form-group">
        <label for="startDate">Start Date</label>
        <input type="date" id="startDate" name="startDate">
      </div>
      <div class="form-group">
        <label for="schedule">Schedule</label>
        <input type="text" id="schedule" name="schedule" placeholder="e.g. Mon/Wed/Fri 10:00-11:30">
      </div>
      <div class="form-group">
        <label for="duration">Duration</label>
        <input type="text" id="duration" name="duration" placeholder="e.g. 3 months">
      </div>
      <div class="form-group">
        <label for="price">Price per Month ($)</label>
        <input type="number" id="price" name="price" step="0.01" min="0" placeholder="0.00">
      </div>
      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Create Group</button>
        <a href="/groups" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
</main>
<%- include('../partials/footer') %>
