<%- include('../partials/head') %>
<%- include('../partials/sidebar') %>
<main class="main-content">
  <%- include('../partials/header') %>
  <div class="content-area">
    <div class="page-header">
      <h1>Groups</h1>
      <a href="/groups/add" class="btn btn-primary">+ Add Group</a>
    </div>

    <% if (search) { %>
      <p class="search-info">Search results for "<strong><%= search %></strong>" — <a href="/groups">Clear</a></p>
    <% } %>

    <% if (groups.length === 0) { %>
      <div class="empty-state">
        <p>No groups found.</p>
        <a href="/groups/add" class="btn btn-primary">Create your first group</a>
      </div>
    <% } else { %>
      <table class="data-table">
        <thead>
          <tr>
            <th>#</th>
            <th>Group Name</th>
            <th>Course</th>
            <th>Teacher</th>
            <th>Schedule</th>
            <th>Students</th>
            <th>Price</th>
            <th>Actions</th>
          </tr>
        </thead>
        <tbody>
          <% groups.forEach((group, i) => { %>
            <tr>
              <td><%= i + 1 %></td>
              <td><a href="/groups/view/<%= group.id %>" class="table-link"><%= group.name %></a></td>
              <td><%= group.course ? group.course.name : '—' %></td>
              <td><%= group.teacher ? group.teacher.firstName + ' ' + group.teacher.lastName : '—' %></td>
              <td><%= group.schedule || '—' %></td>
              <td><%= group.studentCount %></td>
              <td>$<%= (group.price || 0).toFixed(2) %></td>
              <td class="actions-cell">
                <a href="/groups/view/<%= group.id %>" class="btn btn-small btn-secondary">View</a>
                <a href="/groups/edit/<%= group.id %>" class="btn btn-small btn-edit">Edit</a>
                <form action="/groups/delete/<%= group.id %>" method="POST" class="inline-form" onsubmit="return confirm('Delete this group?')">
                  <button type="submit" class="btn btn-small btn-delete">Delete</button>
                </form>
              </td>
            </tr>
          <% }) %>
        </tbody>
      </table>
    <% } %>
  </div>
</main>
<%- include('../partials/footer') %>
