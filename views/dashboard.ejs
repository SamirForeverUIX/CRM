<%- include('partials/head') %>
<%- include('partials/sidebar') %>
<main class="main-content">
  <%- include('partials/header') %>
  <div class="content-area">
    <h1>Dashboard</h1>
    <div class="stats-grid">
      <div class="stat-card">
        <div class="stat-number"><%= teacherCount %></div>
        <div class="stat-label">Teachers</div>
      </div>
      <div class="stat-card">
        <div class="stat-number"><%= groupCount %></div>
        <div class="stat-label">Groups</div>
      </div>
      <div class="stat-card">
        <div class="stat-number"><%= studentCount %></div>
        <div class="stat-label">Students</div>
      </div>
    </div>

    <div class="quick-actions">
      <h2>Quick Actions</h2>
      <div class="actions-row">
        <a href="/teachers/add" class="action-card">+ Add Teacher</a>
        <a href="/groups" class="action-card">View Groups</a>
        <a href="/students" class="action-card">View Students</a>
      </div>
    </div>
  </div>
</main>
<%- include('partials/footer') %>
