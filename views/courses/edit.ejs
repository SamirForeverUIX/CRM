<%- include('../partials/head') %>
<%- include('../partials/sidebar') %>
<main class="main-content">
  <%- include('../partials/header') %>
  <div class="content-area">
    <div class="page-header">
      <h1>Edit Course</h1>
      <a href="/courses" class="btn btn-secondary">Back to List</a>
    </div>

    <% if (error) { %>
      <div class="alert alert-error"><%= error %></div>
    <% } %>

    <form action="/courses/edit/<%= course.id %>" method="POST" class="form-card">
      <div class="form-group">
        <label for="name">Course Name</label>
        <input type="text" id="name" name="name" required value="<%= course.name %>">
      </div>
      <div class="form-group">
        <label for="level">Level</label>
        <input type="text" id="level" name="level" value="<%= course.level %>">
      </div>
      <div class="form-group">
        <label for="description">Description</label>
        <textarea id="description" name="description" rows="4"><%= course.description %></textarea>
      </div>
      <div class="form-actions">
        <button type="submit" class="btn btn-primary">Save Changes</button>
        <a href="/courses" class="btn btn-secondary">Cancel</a>
      </div>
    </form>
  </div>
</main>
<%- include('../partials/footer') %>
